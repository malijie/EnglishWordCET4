<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" >
 
    <FrameLayout
        android:id="@id/main_layout_frame_content"
        android:layout_width="wrap_content"
        android:layout_height="0dip" 
        android:layout_weight="1" /> 
   <!-- <ProgressBar
        android:id="@id/dialog_loading_progressbar_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/> -->
    <LinearLayout 
        android:layout_width="match_parent"  
        android:layout_height="70dip"  
        android:background="@color/main_layout_bg">
	         <RelativeLayout  
	            android:id="@id/main_layout_relativelayout_words"  
	            android:layout_width="0dp"  
	            android:layout_height="match_parent"  
	            android:layout_weight="1" >
	            <View 
	                android:layout_width="match_parent"
	                android:layout_height="1dip"
	                android:background="#209E85"/>
		        <LinearLayout 
				   android:layout_width="match_parent"  
	                android:layout_height="wrap_content"  
	                android:layout_centerVertical="true"  
	                android:gravity="center"
	                android:orientation="vertical">
			    	<ImageView
			    	    android:id="@id/main_layout_button_words"
			    	    android:layout_width="wrap_content"
			    	    android:layout_height="wrap_content"
			    	    android:background="@drawable/bottom_button_words_normal"/>
			    	<TextView 
			    	    android:id="@id/main_layout_textview_words"
			    	    android:layout_width="wrap_content"
			    	    android:layout_height="wrap_content"
			    	    android:text="@string/bottom_button_words"
			    	    android:layout_marginTop="5dip"
			    	    android:textColor="@color/bottom_textview_normal"/>
				</LinearLayout>
			</RelativeLayout>	
			
	        <View 
			    android:layout_width="1dip"
			    android:layout_height="match_parent"
			    android:background="#209E85"/>
	        
	        <RelativeLayout  
		            android:id="@id/main_layout_relativelayout_search"  
		            android:layout_width="0dp"  
		            android:layout_height="match_parent"  
		            android:layout_weight="1" >
		        <View 
	                android:layout_width="match_parent"
	                android:layout_height="1dip"
	                android:background="#209E85"/>
		       <LinearLayout 
				   android:layout_width="match_parent"  
	                android:layout_height="wrap_content"  
	                android:layout_centerVertical="true"  
	                android:orientation="vertical"
	                android:gravity="center">
			    	<ImageView 
			    	    android:id="@id/main_layout_button_search"
			    	    android:layout_width="wrap_content"
			    	    android:layout_height="wrap_content"
			    	    android:background="@drawable/bottom_button_search_normal"/>
			    	<TextView 
			    	    android:id="@id/main_layout_textview_search"
			    	    android:layout_width="wrap_content"
			    	    android:layout_height="wrap_content"
			    	    android:layout_marginTop="5dip"
			    	    android:text="@string/bottom_button_search"
			    	    android:textColor="@color/bottom_textview_normal"/>
				</LinearLayout>
			</RelativeLayout>	
			
	         <View 
			    android:layout_width="1dip"
			    android:layout_height="match_parent"
			    android:background="#209E85"/>
	         
	        <RelativeLayout  
		            android:id="@id/main_layout_relativelayout_unknown"  
		            android:layout_width="0dp"  
		            android:layout_height="match_parent"  
		            android:layout_weight="1">
		       <View 
	                android:layout_width="match_parent"
	                android:layout_height="1dip"
	                android:background="#209E85"/>
		       <LinearLayout 
				   android:layout_width="match_parent"  
	                android:layout_height="wrap_content"  
	                android:layout_centerVertical="true"  
	                android:orientation="vertical"
	                android:gravity="center">
			    	<ImageView 
			    	    android:id="@id/main_layout_button_unknown"
			    	    android:layout_width="wrap_content"
			    	    android:layout_height="wrap_content"
			    	    android:background="@drawable/bottom_button_newword_normal"/>
			    	<TextView 
			    	    android:id="@id/main_layout_textview_unknown"
			    	    android:layout_width="wrap_content"
			    	    android:layout_height="wrap_content"
			    	    android:layout_marginTop="5dip"
			    	    android:text="@string/bottom_button_newword"
			    	    android:textColor="@color/bottom_textview_normal"/>
			    	</LinearLayout>
			</RelativeLayout>	
			
	         <View 
			    android:layout_width="1dip"
			    android:layout_height="match_parent"
			    android:background="#209E85"/>
	        
	        <RelativeLayout  
	            android:id="@id/main_layout_relativelayout_setting"  
	            android:layout_width="0dp"  
	            android:layout_height="match_parent"  
	            android:layout_weight="1">
		       <View 
	                android:layout_width="match_parent"
	                android:layout_height="1dip"
	                android:background="#209E85"/>
		       <LinearLayout 
				   android:layout_width="match_parent"  
	                android:layout_height="wrap_content"  
	                android:layout_centerVertical="true"  
	                android:orientation="vertical"
	           		android:gravity="center">
			  		<ImageView 
			    	    android:id="@id/main_layout_button_setting"
			    	    android:layout_width="wrap_content"
			    	    android:layout_height="wrap_content"
			    	    android:src="@drawable/bottom_button_setting_normal"/>
			    	<TextView  
			    	    android:id="@id/main_layout_textview_setting"
			    	    android:layout_width="wrap_content"
			    	    android:layout_height="wrap_content"
			    	    android:text="@string/bottom_button_setting"
			    	    android:layout_marginTop="5dip"
			    	    android:textColor="@color/bottom_textview_normal"/>
		       </LinearLayout>
			</RelativeLayout>	 	
		           
    </LinearLayout>
    
</LinearLayout>
